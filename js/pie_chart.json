{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Shark Attack Types",
  "width": "container",
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Xuanny-qx/Visualisation2/main/data/shark_attack.csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "count", "as": "count"}
      ],
      "groupby": ["Type"]
    },
    {
      "calculate": "datum.count / sum(datum.count)",
      "as": "percentage"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "percentage", "type": "quantitative", "title": "Attack Type"},
    "color": {
      "field": "Type",
      "type": "nominal",
      "scale": {"range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf"]},
      "legend": {"title": "Legend"}
    },
    "tooltip": [
      {"field": "Type", "title": "Attack Type"},
      {"field": "count", "title": "Count"},
      {"field": "percentage", "title": "Percentage", "format": ".1%"} 
    ]
  }
}
