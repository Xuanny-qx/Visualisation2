{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Shark Attack Types",
  "width": "container",
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Xuanny-qx/Visualisation2/main/data/shark_attack.csv"
  },
  "transform": [
    {
      "aggregate": [
        {"op": "count", "as": "count"}
      ],
      "groupby": ["Type"]
    },
    {
      "calculate": "datum.count / sum(datum.count)",
      "as": "percentage"
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"field": "percentage", "type": "quantitative", "title": "Attack Type"},
    "color": {"field": "Type", "type": "nominal", "scale": {"scheme": "category20c"}, "legend": {"title": "Legend"},
    "tooltip": [
      {"field": "Type", "title": "Attack Type"},
      {"field": "percentage", "title": "Percentage", "format": ".2%"} 
    ]
  }
}
